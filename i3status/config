# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  color_good = "#7C838A"
  color_degraded = "#7C838A"
  color_bad = "#7C838A"
}

#order += "disk /home"
order += "volume master"
order += "cpu_usage 0"
#order += "cpu_temperature 0"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp2s0"
#order += "ethernet eth0"
order += "battery 0"
#order += "load"
order += "tztime local"

wireless wlp2s0 {
        format_up = "🌐%quality"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

battery 0 {
        format = "🔋 %percentage"
        last_full_capacity = true
        low_threshold = 10
}

cpu_usage {
		format = "⚙️ %usage"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "🕑 %d/%m %H:%M"
}

load {
        format = "%1min"
}

disk "/home" {
        format = "|Home:%free"
}

cpu_temperature 0 {
        format ="T:%degrees°C"
	    max_threshold = 65
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input"
}

volume master {
    format = "🔊 %volume"
	  device = "default"
	  mixer = "Master"
	  mixer_idx = 0
}
